<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mybracketapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyBracketingRegistration.NoActionBar" >

        <activity
            android:name="com.example.mybracketapp.activity.BracketBucketsActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyBracketingRegistration.NoActionBar"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.mybracketapp.activity.BracketActivity"
            android:theme="@style/Theme.MyBracketingRegistration.NoActionBar"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"/>

    </application>

</manifest>